<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bdbdbd"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <RelativeLayout
            android:padding="5dp"
            android:background="#4EEE94"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_centerVertical="true"
                android:background="@drawable/ic_navi"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Learn Toeic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.smarteist.autoimageslider.SliderLayout
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            tools:ignore="MissingConstraints" />

       <LinearLayout
           android:padding="10dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="100dp">
               <TextView
                   android:id="@+id/tvContract"
                   android:layout_weight="1"
                   android:layout_margin="5dp"
                   android:text="Contract"
                   android:gravity="bottom|center"
                   android:textColor="#fff"
                   android:textSize="18dp"
                   android:background="@drawable/contracts"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />

               <TextView
                   android:id="@+id/tvResearchMarket"
                   android:layout_weight="1"
                   android:layout_margin="5dp"
                   android:text="Research"
                   android:gravity="bottom|center"
                   android:textColor="#fff"
                   android:textSize="18dp"
                   android:background="@drawable/research"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />

               <TextView
                   android:id="@+id/tvWanraty"
                   android:layout_weight="1"
                   android:layout_margin="5dp"
                   android:text="Wanraties"
                   android:gravity="bottom|center"
                   android:textColor="#fff"
                   android:textSize="18dp"
                   android:background="@drawable/warranties"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />


       </LinearLayout>
</LinearLayout>
